<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.carman.ui.activity.Limit2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#CCCCCC"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/limit_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginLeft="10dp"
                android:text="time"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/limit_week_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="week"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/limit_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="city"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="限行尾号："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/limit_xxweihao1_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/limit_xxweihao2_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="text"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="处罚事项："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/limit_fine_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="text"
                android:textSize="18sp" />

        </LinearLayout>

        <com.example.carman.view.MyListView
            android:id="@+id/limit_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.example.carman.view.MyListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="其他说明："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/limit_remarks_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="text"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
